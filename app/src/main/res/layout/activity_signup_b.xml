<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="80dp"
        android:gravity="center"
        android:text="본인 인증"
        android:textColor="@color/colorTextMain"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.183" />

    <EditText
        android:id="@+id/editTextEmail4"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/editemail"
        android:ems="15"
        android:hint="인증 코드"
        android:inputType="number"
        android:paddingLeft="15dp"
        android:textColor="@color/colorTextMain"
        android:textColorHint="@color/colorTextHidden"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonNext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLogin3"
        app:layout_constraintVertical_bias="0.12" />

    <EditText
        android:id="@+id/editTextEmail3"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/editemail"
        android:ems="15"
        android:hint="이메일"
        android:inputType="textEmailAddress"
        android:paddingLeft="15dp"
        android:textColor="@color/colorTextMain"
        android:textColorHint="@color/colorTextHidden"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonNext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.111" />

    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:gravity="center"
        android:text="이메일을 받지 못했습니다."
        android:textColor="@color/colorTextMain"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonNext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLogin4"
        app:layout_constraintVertical_bias="0.102" />

    <Button
        android:id="@+id/buttonLogin4"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/btnlogin"
        android:ems="15"
        android:gravity="center_horizontal|top"
        android:paddingTop="6dp"
        android:text="확인"
        android:textColor="@color/colorAccent"
        android:textIsSelectable="false"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonNext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmail4"
        app:layout_constraintVertical_bias="0.050000012" />

    <Button
        android:id="@+id/buttonLogin3"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/btnlogin"
        android:ems="15"
        android:gravity="center_horizontal|top"
        android:paddingTop="6dp"
        android:text="인증 코드 발급"
        android:textColor="@color/colorAccent"
        android:textIsSelectable="false"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonNext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmail3"
        app:layout_constraintVertical_bias="0.029999971" />

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/btnnext"
        android:ems="15"
        android:gravity="center_horizontal|top"
        android:paddingTop="6dp"
        android:text="다음"

        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        android:elevation="10dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/toolbarsignup2"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="회원가입"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="16dp">

        </TextView>

    </androidx.appcompat.widget.Toolbar>


</androidx.constraintlayout.widget.ConstraintLayout>